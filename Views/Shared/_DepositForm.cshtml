@model Transaction

<form asp-action="HandleTransaction" method="post" class="m-2">
        <div class="form-group row">
            <label asp-for="Amount" class="control-label col"></label>
            <input asp-for="Amount" type="number" class="form-control col" />
            <input type="submit" value="Deposit" class="btn btn-primary col p-0 m-1" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>


</form>